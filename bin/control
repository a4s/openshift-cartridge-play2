#!/bin/bash -e


function start {
    cd $OPENSHIFT_REPO_DIR
    # build on first time
    [ -d target ] || build
    rm -f target/universal/stage/RUNNING_PID
    BIN_NAME=$(ls target/universal/stage/bin/ | head -n 1)
    #python http_server.py
    #nohup target/universal/stage/bin/$BIN_NAME -java-home /usr/lib/jvm/java-1.8.0-openjdk-1.8.0.51-1.b16.el6_7.i386 -Duser.home=${OPENSHIFT_DATA_DIR} -Dhttp.port=8080 -Dhttp.address=${OPENSHIFT_PLAY2_IP} -DapplyEvolutions.default=true -Dconfig.resource=openshift.conf -J-Xms128M -J-Xmx384m -J-server > $OPENSHIFT_PLAY2_LOG_DIR/play.log 2>&1 &
}

function stop {
    killall java || true
}

function restart {
    stop
    start
}

function build {
    # Workaround for failure in npm install when a package in package.json
    # points to a git commit.
    # This issue occurs because we are running in the context of a
    # git post receive-hook
    unset GIT_DIR
    unset GIT_WORK_TREE

    cd ${OPENSHIFT_REPO_DIR}
    ${OPENSHIFT_DATA_DIR}/activator/activator clean stage -java-home /usr/lib/jvm/java-1.8.0-openjdk-1.8.0.51-1.b16.el6_7.i386 -Duser.home=${OPENSHIFT_DATA_DIR} -J-Xms128M -J-Xmx448m
}

function tidy {
    shopt -s dotglob
    rm -rf $OPENSHIFT_TMP_DIR/*
}

function catchall {
    echo ""
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       build ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
